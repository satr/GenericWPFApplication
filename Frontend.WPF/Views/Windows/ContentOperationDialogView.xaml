<Window x:Class="Frontend.WPF.Views.Windows.ContentOperationDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" WindowStartupLocation="CenterScreen">
<Window.Resources>
    <Style TargetType="Button" x:Key="Standard">
            <Setter Property="Width" Value="60"></Setter>
            <Setter Property="Height" Value="26"></Setter>
            <Setter Property="Margin" Value="2"></Setter>
    </Style>
</Window.Resources>    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentControl x:Name="ContentViewHost" Content="{Binding ContentView}"
                        Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{Binding OperationTitle}" Command="{Binding OperationCommand}" 
                    CommandParameter="{Binding ElementName=ContentViewHost, Path=Content.DataContext}" 
                    Style="{StaticResource Standard}" />
            <Button Content="{Binding CancelTitle}" Command="{Binding CancelCommand}"  
                    CommandParameter="{Binding ElementName=ContentViewHost, Path=Content.DataContext}" 
                    Style="{StaticResource Standard}" />
        </StackPanel>
    </Grid>
</Window>
